<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h3 class="centred">No orders for now ! </h3>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <u><h1>OrderId -</h1></u><%= order._id %> - <a style="color: white;background-color: black;padding: 0.4rem;text-decoration: none;" href="/orders/<%= order._id %>">Download Invoice</a>
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> | Price: â‚¹ <%= p.product.price %></li>Quantity: <%= p.quantity %>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>